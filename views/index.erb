<title>
  Top 100 Albums
</title>
</head>
<body>
  <h1>Top 100 Albums of All Time</h1><br><br>
  <form action= '/' method='get'>
    <div class='centered'>
      <h2>Sort By:</h2>
      <button type='submit' formaction = 'rank'>Rank</button>
      <button type='submit' formaction = 'alphabet'>Alphabetical</button>
      <button type='submit' formaction = 'year'>Year</button>
      <br>
      <input placeholder='highlight a song number....' name='number' id='number'>
      <button type='submit'>Submit</button>
    </div>
  </form>
  <br>
  <br>
  <ol>
    <% @albums.each |album| do %>
    <li class="<%= album.highlighted? ? 'highlighted' : '' %>">
      <% end %>
      <% highlight_counter = 1 %>
      <% @albums.each |album| do %>
      <% if @highlight.to_s === highlight_counter.to_s %>
      <li class = "highlighted">
        <%= album.title %>
        <%= album.year %>
      </li>
      <% else %>
      <li>
        <%= album.title %>
        <%= album.year %>
      </li>
      <% end %>
      <% highlight_counter += 1 %>
      <% end %>
    </ol>
  </body>
